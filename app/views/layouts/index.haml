    %pattern{ :id => 'stripes-alert', :patternUnits => 'userSpaceOnUse', :width => 8, :height => 8 }
      %path{ :d => 'M-1,-1 l9,9 M-1,7 l9,9 M7,-1 l9,9', :stroke => '#fc9bd6', 'stroke-width' => 2 }
