!!!
.div
  %h3{ :style => 'text-align:center;width:100%;' }
    %b
      = @name

  .-line-break
  .-line-break
  .-line-break
  - @narratives.each do |n|
    %table
      %tbody
        - if n['operation_id']
          %tr
            %td{ :style => 'text-align:right' }
              %b
                = "Operation:"
            %td{ :style => 'text-align:left' }
              = Operation.find(n['operation_id']).name
        - if n['ppg_id']
          %tr
            %td{ :style => 'text-align:right' }
              %b
                = "PPG:"
            %td{ :style => 'text-align:left' }
              = Ppg.find(n['ppg_id']).name
        - if n['goal_id']
          %tr
            %td{ :style => 'text-align:right' }
              %b
                = "Goal:"
            %td{ :style => 'text-align:left' }
              = Goal.find(n['goal_id']).name
        - if n['problem_objective_id']
          %tr
            %td{ :style => 'text-align:right' }
              %b
                = "Objective:"
            %td{ :style => 'text-align:left' }
              = ProblemObjective.find(n['problem_objective_id']).objective_name
        - if n['output_id']
          %tr
            %td{ :style => 'text-align:right' }
              %b
                = "Output:"
            %td{ :style => 'text-align:left' }
              = Output.find(n['output_id']).name

    - paragraphs = n['usertxt'].split("\\n")
    - paragraphs.each do |p|
      %p
        = p
    .-line-break

